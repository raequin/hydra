<?xml version="1.0"?>

<!--
  Hydra (dual UR10) launch
  Loads hydra robot description
  starts ur_driver (ur_modern_driver package) nodes

  Usage:
    hydra_bringup.launch placer_robot_ip:=<value> attacher_robot_ip:=<value>
-->

<launch>
  <arg name="placer_robot_ip"/>
  <arg name="attacher_robot_ip"/>
  
  <arg name="min_payload"  default="0.0"/>
  <arg name="max_payload"  default="10.0"/>
  <arg name="servoj_time" default="0.008" />
  
  <!-- The max_velocity parameter is only used for debugging in the ur_driver. It's not related to actual velocity limits -->
  <arg name="max_velocity" default="10.0"/> <!-- [rad/s] -->
  
  
  <!-- robot model -->  
  <!-- Load the robot description on the parameter server, it is joint limited -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find hydra)/models/hydra/hydra.urdf.xacro'" />  
    

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  

  <!-- driver for placer robot -->
  <node name="ur_driver_placer" pkg="ur_modern_driver" type="ur_driver" output="screen">
  <!-- copy the specified IP address to be consistant with ROS-Industrial spec. -->
    <param name="prefix" type="str" value="placer_" />
    <param name="robot_ip_address" type="str" value="$(arg placer_robot_ip)" />
    <param name="min_payload" type="double" value="$(arg min_payload)" />
    <param name="max_payload" type="double" value="$(arg max_payload)" />
    <param name="max_velocity" type="double" value="$(arg max_velocity)" />
    <param name="servoj_time" type="double" value="$(arg servoj_time)" />
    <param name="base_frame" type="str" value="placer_base"/>
    <param name="tool_frame" type="str" value="placer_tool0_controller"/>
  </node>

  <!-- driver for attacher robot -->
  <node name="ur_driver_attacher" pkg="ur_modern_driver" type="ur_driver" output="screen">
  <!-- copy the specified IP address to be consistant with ROS-Industrial spec. -->
    <param name="prefix" type="str" value="attacher_" />
    <param name="robot_ip_address" type="str" value="$(arg attacher_robot_ip)" />
    <param name="min_payload" type="double" value="$(arg min_payload)" />
    <param name="max_payload" type="double" value="$(arg max_payload)" />
    <param name="max_velocity" type="double" value="$(arg max_velocity)" />
    <param name="servoj_time" type="double" value="$(arg servoj_time)" />
    <param name="base_frame" type="str" value="attacher_base"/>
    <param name="tool_frame" type="str" value="attacher_tool0_controller"/>
  </node>

</launch>
